<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krystian.checkers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_checkers"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gameMechanics.GameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".database.StatsActivity"
            android:label="@string/stats_name"
            android:screenOrientation="portrait"/>
        <activity android:name=".database.GamesListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".database.GameReviewActivity"
            android:label="@string/analysis_name"
            android:screenOrientation="portrait"/>
    </application>

</manifest>